---
const { company, period, description } = Astro.props;

<div class="p-6 bg-white rounded-lg shadow-md">
  <h3 class="text-lg font-semibold text-[#FF6F61]">{company}</h3>
  <span class="text-gray-500 text-sm">{period}</span>
  <ul class="mt-2 list-disc pl-5 text-gray-600">
    {description.map((desc) => (
      <li>{desc}</li>
    ))}
  </ul>
</div>
